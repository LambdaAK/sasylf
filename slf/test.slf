package slf

module test

provides

  terminals S empty

  syntax n ::= 0 | S n

  judgment natcombine : n + n = n

    ---------- natcombine-z
    0 + n = n

    n1 + n2 = n3
    ----------------- natcombine-s
    S n1 + n2 = S n3

  module natfoldableset = slf.foldableset[n, natcombine]

  syntax ss = natfoldableset.s ::= empty | n :: ss
  
  judgment natfoldset = natfoldableset.foldset : ss -> n

  theorem natfoldone:
    forall n
    exists n :: empty -> n
    proof by theorem natfoldableset.foldone on n
  end theorem

  theorem natfoldtwo:
    forall d: n1 + n2 = n3
    exists n1 :: n2 :: empty -> n3

    proof by theorem natfoldableset.foldtwo on d
  end theorem

  theorem t1:
    forall d: n1 + n2 = n3
    exists n1 + n2 = n3
    proof by theorem natfoldableset.trivial on d
  end theorem

